@model myMvcAppTraining.Models.EmployerDetails

@{
    ViewBag.Title = "EmpEdit";
}

<h2>Edit</h2>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@using (Html.BeginForm("EmpEdit", "Employer", FormMethod.Post, new { id = "updateForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EmployerDetails</legend>
        @Html.HiddenFor(model => model.emp.empId)

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empFirstname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empFirstname)
            @Html.ValidationMessageFor(model => model.emp.empFirstname)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empMiddlename)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empMiddlename)
            @Html.ValidationMessageFor(model => model.emp.empMiddlename)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empLastname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empLastname)
            @Html.ValidationMessageFor(model => model.emp.empLastname)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empGender)
        </div>
        <div class="editor-field">
           @* @Html.HiddenFor(model => model.emp.empGender)*@
            @Html.DropDownListFor(model => model.emp.empGender, new List<SelectListItem>
                 {
                     new SelectListItem { Text = "Male", Value = "Male"},
                   new SelectListItem { Text ="Female", Value = "Female"}
                   }, "--Select Gender--")
            @Html.ValidationMessageFor(model => model.emp.empGender)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empContactno)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empContactno)
            @Html.ValidationMessageFor(model => model.emp.empContactno)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empcity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empcity)
            @Html.ValidationMessageFor(model => model.emp.empcity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empDescription)
            @Html.ValidationMessageFor(model => model.emp.empDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empUsername)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empUsername)
            @Html.ValidationMessageFor(model => model.emp.empUsername)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.empPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.emp.empPassword)
            @Html.ValidationMessageFor(model => model.emp.empPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.emp.companyId)
        </div>
        <div class="editor-field">
            @*@Html.HiddenFor(model => model.emp.companyId)*@
           
            @Html.DropDownListFor(model => model.emp.companyId, Model.companyList, "--Select Company--")
            @*@Html.DropDownListFor(model => model.emp.companyId, (SelectList)ViewBag.ddl, "--Select Company--")*@
            @Html.ValidationMessageFor(model => model.emp.companyId)
        </div>

        <p>
            <input type="submit" value="Save"/>
        </p>
    </fieldset>
}

